<div class="container">
    <div class="text-center">
        <form action="/api/register" method="post">
            <div class="form-group">
                <label for="username">Username</label>
                <div id="danger1" class="alert alert-danger" style="display: none">
                    <strong>Username</strong> is required
                </div>
                <div id="danger1_1" class="alert alert-danger" style="display: none">
                    <strong id="failUsername"></strong> is already taken
                </div>
                {{!-- <div id="danger1_2" class="alert alert-success" style="display: none">
                    <strong id="strong_success"></strong> is valid
                </div> --}}
                <input type="text" class="form-control" name="username" placeholder="Enter Username">
            </div>

            <div class="form-group">
                <label for="fullname">Fullname</label>
                {{!-- <div id="danger2" class="alert alert-danger" style="display: none">
                    <strong>Email</strong> is required
                </div> --}}
                <input type="text" class="form-control" name="fullname" placeholder="Enter Fullname">
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                {{!-- <div id="danger2" class="alert alert-danger" style="display: none">
                    <strong>Email</strong> is required
                </div> --}}
                <input type="email" class="form-control" name="email" placeholder="Enter Email">
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <div id="danger2" class="alert alert-danger" style="display: none">
                    <strong>Password</strong> is required
                </div>
                <input type="password" class="form-control" name="password" placeholder="Enter Password">
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <div id="danger3" class="alert alert-danger" style="display: none">
                    <strong>ConfirmPassword</strong> is required
                </div>

                <div id="danger4" class="alert alert-danger" style="display: none">
                    <strong>Confirm Password</strong> must match with <strong>Password</strong> 
                </div>
                <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password">
            </div>

            <button id="btnRegister" type="submit" name="send" class="btn btn-success">Register</button>
        </form>
    </div>
</div>